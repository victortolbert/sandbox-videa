a:hover, a:focus
  text-decoration underline
  color #005fb2

a:active
  color #00396b

a,
button
  cursor pointer

b,
strong,
dfn
  font-weight 700

mark
  background-color #fff03f
  color #16325c

abbr[title]
  cursor help

input[type=search]
  box-sizing border-box

table
  width 100%

caption,
th,
td
  text-align left

